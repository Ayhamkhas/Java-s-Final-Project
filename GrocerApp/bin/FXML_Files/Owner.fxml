<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="your.package.name.OwnerController" style="-fx-background-color: #eaf5e3;">
    <VBox spacing="10" style="-fx-padding: 20px; -fx-alignment: center;">

        <Label text="Owner Interface" style="-fx-font-size: 24px; -fx-text-fill: #48ab2a; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Button text="Manage Products" onAction="#manageProductsAction" style="-fx-background-color: #9EFA8C; -fx-text-fill: #3d6d38;" />
            <Button text="Manage Carriers" onAction="#manageCarriersAction" style="-fx-background-color: #9EFA8C; -fx-text-fill: #3d6d38;" />
            <Button text="View Orders" onAction="#viewOrdersAction" style="-fx-background-color: #9EFA8C; -fx-text-fill: #3d6d38;" />
            <Button text="Generate Reports" onAction="#generateReportsAction" style="-fx-background-color: #9EFA8C; -fx-text-fill: #3d6d38;" />
        </HBox>

        <TableView fx:id="tableView" style="-fx-background-color: #cdeccd; -fx-padding: 10px; -fx-border-radius: 10px;">
            <!-- Table content will be dynamically added here -->
        </TableView>

        <Button text="Log Out" onAction="#logoutAction" style="-fx-background-color: #9EFA8C; -fx-text-fill: #3d6d38;" />
    </VBox>
</AnchorPane>
